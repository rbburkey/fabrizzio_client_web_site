                    <li class="col-sm-2">
                      <a class="thumbnail" data-target="#myCarousel" data-slide-to="2" id="carousel-selector-3"><img src="assets/double_deluxe/doble-deluxe-7web.jpg"></a>
                    </li>

                    <li class="col-sm-2">
                      <a class="thumbnail" data-target="#myCarousel" data-slide-to="3" id="carousel-selector-4"><img src="assets/double_deluxe/doble-deluxe-6web copy.jpg"></a>
                    </li>

                    <li class="col-sm-2">
                      <a class="thumbnail" data-target="#myCarousel" data-slide-to="4" id="carousel-selector-5"><img src="assets/double_deluxe/doble-newdeluxe3web.jpg"></a>
